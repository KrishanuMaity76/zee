<% include header %>
<body>
  <div class="pure-g">
    <div class="pure-u-1-3">
      &nbsp;
    </div>
    <div class="pure-u-1-3">
      <form class="pure-form pure-form-stacked" method='POST' action='/login'>
        <h1>Zee</h1>
        <fieldset>
          <legend>Enter your email to continue.</legend>
          <div class="error-message"><%= message %></div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input id="email" type="email" id="username" name="username" placeholder="Email">
          <span class="pure-form-message">Don't have an account? <a href="/signup">Create one </a></span>
          <p><button class="pure-button pure-button-primary" type="submit">Next</button></p>
        </fieldset>
        
        <fieldset>
          <legend>Or choose a provider.</legend>
          <a href="/authenticate/github">Login with Github</a> | <a href="/authenticate/google">Login with Google</a>
        </fieldset>
      </form>
    </div>
    <div class="pure-u-1-3">
      &nbsp;
    </div>
  </div>
</body>