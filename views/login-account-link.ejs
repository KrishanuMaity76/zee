<% include header %>
<body>
  <div class="pure-g">
    <div class="pure-u-1-3">
      &nbsp;
    </div>
    <div class="pure-u-1-3">
      <form class="pure-form pure-form-stacked" method='POST' action='/authenticate/local'>
        <h1>Zee</h1>
        <fieldset>
          <div class="error-message"><%= message %></div>
          <legend>Hello, <b><%= username %></b>. You have an existing account in Zee. Enter your Zee account password to link your <%= provider %> account to your Zee account.</legend>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="hidden" name="username" value="<%= username %>">
          <input type="password" id="password" placeholder="password" value="243" name="password">
          <span class="pure-form-message"><a href="/login">Not you? </a></span>
          <p><button class="pure-button pure-button-primary" type="submit">Next</button></p>
        </fieldset>
      </form>
    </div>
    <div class="pure-u-1-3">
      &nbsp;
    </div>
  </div>
</body>