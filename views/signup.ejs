<% include header %>
<body>
  <div class="pure-g">
    <div class="pure-u-1-3">
      &nbsp;
    </div>
    <div class="pure-u-1-3">
      <form class="pure-form pure-form-stacked" method='POST' action='/signup'>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <h1>Create your account</h1>
        <fieldset>
          <legend>Enter your account details to continue.</legend>
          <div class="error-message"><%= signupErrorMessage %></div>
          <div class="pure-control-group">
              <label for="username">Email</label>
              <input class="pure-u-3-5" type="text" id="username" name="username">
          </div>
          <div class="pure-control-group">
              <label for='password'> Password</label>
              <input class="pure-u-3-5" type="password" id="password" name="password">
              <span class="pure-form-message">Minimum 10 characters.</span>
          </div>
          <div class="pure-control-group">
              <label for='confirmpassword'> Confirm Password</label>
              <input class="pure-u-3-5" type="password" id="confirmpassword" name="confirmpassword">
          </div>
          <p><button class="pure-button pure-button-primary" type="submit">Sign Up</button></p>
        </fieldset>
      </form>
    </div>
    <div class="pure-u-1-3">
      &nbsp;
    </div>
  </div>
</body>
