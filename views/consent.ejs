<% include header %>
<body>
  <div class="pure-g">
    <div class="pure-u-1-3">
      &nbsp;
    </div>
    <div class="pure-u-1-3">
      <form class="pure-form pure-form-stacked" method='POST' action='/decision'>
        <h1>Authorize</h1>
        <p>Hello <b><%= user.email %></b>
        <fieldset>
          <legend> <b><%= client.client_name %></b> wants access to the following permissions:</legend>
          <input name="transaction_id" type="hidden" value="<%= transactionID %>">
          <input name="scope" type="hidden" value="<%= scope %>">
          <% for (var scopeItem in friendlyScopes) { %>
            <p><span><div class="icono-user"></div>&nbsp;&nbsp;<%= friendlyScopes[scopeItem] %></span></p>
          <% } %>
          <!-- <span class="pure-form-message">Not you? <a href="/login">Login </a></span> -->
          <button class="button-success pure-button pure-input-1-3" type="submit" value="Allow" id="allow" name="allow">Allow</button>
          <button class="button-error pure-button pure-input-1-3" type="submit" value="Deny" id="deny" name="cancel">Deny</button>
          <p><span class="pure-form-message">Authorizing will redirect you to <b><%= redirectURI %></b></span></p>
        </fieldset>
      </form>
    </div>
    <div class="pure-u-1-3">
      &nbsp;
    </div>
  </div>
</body>